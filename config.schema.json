{
  "pluginAlias": "GreeAirConditioner",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Gree AC"
      },
      "language": {
        "title": "Language",
        "type": "string",
        "default": "zh-CN",
        "oneOf": [
          { "title": "简体中文", "enum": ["zh-CN"] },
          { "title": "English", "enum": ["en"] }
        ]
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "default": 7002,
        "description": "UDP socket server port to bind"
      },
      "scanAddress": {
        "title": "Scan Address, not target device address",
        "type": "string",
        "format": "ipv4",
        "default": "192.168.1.255"
      },
      "scanCount": {
        "title": "Scan count",
        "type": "integer",
        "placeholder": 10,
        "minimum": 3
      },
      "defaultValue": {
        "title": "Default Settings",
        "type": "object",
        "properties": {
          "statusUpdateInterval": {
            "title": "Status Update Interval (Second)",
            "type": "integer",
            "default": 3,
            "minimum": 1,
            "maximum": 600
          },
          "sensorOffset": {
            "title": "Temperature Offset",
            "type": "integer",
            "default": 40,
            "oneOf": [
              { "title": "40", "enum": [40] },
              { "title": "0", "enum": [0] }
            ]
          },
          "defaultSpeed": {
            "title": "Default Fan Speed",
            "type": "integer",
            "default": 3,
            "oneOf": [
              { "title": "low", "enum": [1] },
              { "title": "medium-low", "enum": [2] },
              { "title": "medium", "enum": [3] },
              { "title": "medium-high", "enum": [4] },
              { "title": "high", "enum": [5] }
            ],
            "required": true
          },
          "defaultVerticalSwing": {
            "title": "Default Vertical Swing Mode",
            "type": "integer",
            "default": 0,
            "oneOf": [
              { "title": "default", "enum": [0] },
              { "title": "fixed highest", "enum": [2] },
              { "title": "fixed higher", "enum": [3] },
              { "title": "fixed middle", "enum": [4] },
              { "title": "fixed lower", "enum": [5] },
              { "title": "fixed lowest", "enum": [6] },
              { "title": "swing lowest", "enum": [7] },
              { "title": "swing lower", "enum": [8] },
              { "title": "swing middle", "enum": [9] },
              { "title": "swing higher", "enum": [10] },
              { "title": "swing highest", "enum": [11] }
            ]
          },
          "defaultHorizontalSwing": {
            "title": "Default Horizontal Swing Mode",
            "type": "integer",
            "default": 0,
            "oneOf": [
              { "title": "default", "enum": [0] },
              { "title": "left", "enum": [2] },
              { "title": "centerLeft", "enum": [3] },
              { "title": "center", "enum": [4] },
              { "title": "centerRight", "enum": [5] },
              { "title": "right", "enum": [6] }
            ]
          },
          "switches": {
            "title": "Switches",
            "type": "string",
            "description": "Switches to enable.",
            "placeholder": "power,verticalSwing,horizontalSwing,quietMode,powerfulMode,light,dryMode,fanMode"
          }
        }
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "mac": {
              "title": "Mac Address (Serial Number)",
              "type": "string",
              "required": true
            },
            "name": {
              "title": "Custom Device Name",
              "type": "string"
            },
            "disabled": {
              "title": "Disabled",
              "type": "boolean"
            },
            "sensorOffset": {
              "title": "Temperature Offset",
              "type": "integer",
              "default": 40,
              "oneOf": [
                { "title": "40", "enum": [40] },
                { "title": "0", "enum": [0] }
              ],
              "required": true
            },
            "defaultSpeed": {
              "title": "Default Fan Speed",
              "type": "integer",
              "default": 3,
              "oneOf": [
                { "title": "low", "enum": [1] },
                { "title": "medium-low", "enum": [2] },
                { "title": "medium", "enum": [3] },
                { "title": "medium-high", "enum": [4] },
                { "title": "high", "enum": [5] }
              ],
              "required": true
            },
            "defaultVerticalSwing": {
              "title": "Default Vertical Swing Mode",
              "type": "integer",
              "oneOf": [
                { "title": "default", "enum": [0] },
                { "title": "fixed highest", "enum": [2] },
                { "title": "fixed higher", "enum": [3] },
                { "title": "fixed middle", "enum": [4] },
                { "title": "fixed lower", "enum": [5] },
                { "title": "fixed lowest", "enum": [6] },
                { "title": "swing lowest", "enum": [7] },
                { "title": "swing lower", "enum": [8] },
                { "title": "swing middle", "enum": [9] },
                { "title": "swing higher", "enum": [10] },
                { "title": "swing highest", "enum": [11] }
              ]
            },
            "defaultHorizontalSwing": {
              "title": "Default Horizontal Swing Mode",
              "type": "integer",
              "oneOf": [
                { "title": "default", "enum": [0] },
                { "title": "left", "enum": [2] },
                { "title": "centerLeft", "enum": [3] },
                { "title": "center", "enum": [4] },
                { "title": "centerRight", "enum": [5] },
                { "title": "right", "enum": [6] }
              ]
            },
            "switches": {
              "title": "Switches",
              "type": "string",
              "description": "Switches to enable. commas separated string. options: power,verticalSwing,horizontalSwing,quietMode,powerfulMode,light,dryMode,fanMode",
              "placeholder": "power,verticalSwing,horizontalSwing,quietMode,powerfulMode,light,dryMode,fanMode"
            }
          }
        }
      }
    }
  }
}
